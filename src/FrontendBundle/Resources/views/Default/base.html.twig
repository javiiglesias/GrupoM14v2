                            <div id="fd" class="col-xs-6 col-sm-3 col-md-2 col-md-push-2">
                                <a href="#"><span class="fa fa-facebook fa-2x"></span></a>
                            </div>
                            <div id="twitter" class="col-xs-6 col-sm-3 col-md-2 col-md-push-3">
                                <a href="#"><span class="fa fa-twitter fa-2x "></span></a>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3 col-md-push-1 col-lg-push-1">
                            <div class="text-center">
                                <div class="col-xs-9 col-xs-push-2 col-sm-5 col-md-6 col-lg-11 col-sm-push-3  col-md-push-5 col-lg-push-2">
                                    <img class="img-responsive img-logo-footer" src="{{asset('public/image/logo_white.png')}}">     
