<!DOCTYPE html>
<html>
    <head>
        <!-- Meta -->
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <!-- Estils -->            
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
            <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.7/paper/bootstrap.min.css"/>
            <link rel="stylesheet" type="text/css" href="{{asset('public/css/estil.css') }}"/>            
            <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"/>
            <link rel="icon" type="image/x-icon" href="{{ asset('public/image/icon01.png') }}" />

        {% endblock %}

    </head>
    <body>
        <div class="container-fluid">
            {% block menu %}
                <div class="navbar-container">
                    <div class="container">
                        <nav class="navbar navbar-inverse navbar-fixed-top" id="navbarScroll">
                            <div class="container">
                                <div class="navbar-header">
                                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                                        <span class="sr-only">Toggle navigation</span>
                                        <span class="fa fa-bars fa-2x text-warning"></span>
                                        
                                    </button>
                                    <a class="navbar-brand" href="#"><img src="{{ asset('public/image/logo01.png') }}" class="img-brand"/></a>
                                </div>
                                <div id="navbar" class="navbar-collapse collapse">                    
                                    <ul class="nav navbar-nav">
                                        <li><a href="{{ path('frontend_homepage') }}">Inici</a></li>
                                        <li class="dropdown">
                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Agencia <span class="caret"></span></a>
                                            <ul class="dropdown-menu">
                                                <li><a href="{{path('frontend_mostrar_obres')}}">Obres</a></li>
                                                <li><a href="{{path('frontend_mostrar_actors')}}">Actors</a></li>    
                                                <li><a href="{{path('frontend_mostrar_directors')}}">Directors</a></li>                                                                                           
                                            </ul>
                                        </li> 
                                        <li><a href="{{ path('frontend_quisom') }}">Qui som?</a></li>                                                                               
                                        <li><a href="{{ path('frontend_contacte') }}">Contacte</a></li> 
                                    </ul>
                                    <ul class="nav navbar-nav navbar-right">
                                        <li class="dropdown">
                                            {% if is_granted('ROLE_ADMIN') %}
                                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="fa fa-user"></span> {{app.user.username | title}}  <span class="caret"></span></a>
                                            {% else %}
                                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="fa fa-user"></span> Login  <span class="caret"></span></a>
                                            {%endif%}
                                            <ul class="dropdown-menu">                        
                                                <li><a href="{{ path('backend_login') }}">Iniciar Sessio</a></li>
                                            </ul>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </nav>
                    </div>
                </div>                
            {% endblock %}

            {% block head %} 
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- carousel -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        <div class="item active">
                            <img class="first-slide img-responsive" src="{{asset('public/image/slide3.jpg') }}" alt="First slide">
                            <div class="container">
                                <div class="carousel-caption">
                                    <div class="paragraf col-xs-12 col-sm-6 col-md-3   col-sm-push-5 col-md-push-4 col-lg-push-4">
                                        <img src="{{asset('public/image/logo_white.png') }}" class="img-responsive img-logoHeader">
                                    </div>              
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <img class="second-slide img-responsive" src="{{asset('public/image/slide1.jpg') }}" alt="Second slide">
                            {# <div class="container">
                                 <div class="carousel-caption">
                                     <div class="paragraf col-xs-12 col-sm-6 col-md-3   col-sm-push-5 col-md-push-4 col-lg-push-4">
                                         <img src="view/images/Logov2.png" class="img-responsive img-logoHeader">
                                     </div>               
                                 </div>
                             </div>#}
                        </div>
                        <div class="item">
                            <img class="third-slide img-responsive" src="{{asset('public/image/slide2.jpg') }}" alt="Third slide">
                            {#<div class="container">
                                <div class="carousel-caption">
                                    <div class="paragraf col-xs-12 col-sm-6 col-md-3   col-sm-push-5 col-md-push-4 col-lg-push-4">
                                        <img src="view/images/Logov2.png" class="img-responsive img-logoHeader">
                                    </div>               
                                </div>
                            </div>#}
                        </div>
                    </div>
                    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div><!-- fi carousel -->
            {% endblock %}

            {% block content %}       

            {% endblock %}  <!-- fi content-->          
            {% block footer %}
                <footer class="footer">  
                    <div class="row">
                        <div class="col-xs-6 col-sm-3 col-md-4 col-lg-3 col-md-push-2 col-lg-push-2">
                            <h4>Explora la web</h4>
                            <ul>
                                <li><a href="{{ path('frontend_homepage') }}">Inici</a></li>
                                <li><a href="{{ path('frontend_quisom') }}">Qui som?</a></li>
                                <li><a href="{{ path('frontend_mostrar_obres') }}">obres</a></li>
                                <li><a href="{{ path('frontend_mostrar_actors') }}">Actors</a></li>
                                <li><a href="{{ path('frontend_mostrar_directors') }}">Directors</a></li>
                                <li><a href="{{ path('frontend_contacte') }}">Contacte i Ubicació</a></li> 
                            </ul>
                        </div>
                        <div class="col-xs-6 col-sm-3  col-md-4 col-lg-2 col-md-push-1 col-lg-push-1">
                            <h4>Categories</h4>
                            {% block tipusObra %}

                            {% endblock %}
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-2  col-lg-push-1" >
