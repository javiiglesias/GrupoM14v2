{% extends "FrontendBundle:Default:base.html.twig" %}
{% block title %}Contacte{% endblock %}
{% block head %} 
    <header class="container-header">
        <div class="container">
            <h1>Contacte</h1>
        </div>                
    </header>
{% endblock %}
{% block content %}
    <div class="container">
        <div class="col-xs-12 col-lg-12">
            <div class="col-xs-12 col-lg-5 col-lg-push-1">
                <h4>Formulari de contacte:</h4>
                 <div class="col-lg-12 mt">
                {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
                {{ form_widget(form)}}
                {{ form_end(form) }}
                 </div>
            </div>
             
             <div class="col-xs-12 col-lg-6 col-lg-push-1">
                 <h4>Ubicaci√≥:</h4>
             <div class="col-lg-12 mt">
            <div class="embed-responsive embed-responsive-16by9">
                <iframe class="embed-responsive-item" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2983.547342733569!2d2.280842614961934!3d41.60067437924509!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12a4c7c079594ad1%3A0xe79f32c79f1ba32b!2sCarrer+del+Camp+de+les+Moreres%2C+14%2C+08401+Granollers%2C+Barcelona!5e0!3m2!1ses!2ses!4v1476886776117" width="600" height="450" style="border:0" allowfullscreen></iframe>
            </div> 
             </div>
        </div>
        </div>
    </div>
{% endblock %}

 {% block tipusObra %}
    {% for tipus in tipusObra %}
        <ul>
            <li name="idobra" hidden>{{ tipus.id}}</li>                                
            <li><a href="{{path('frontend_mostrar_tipoobra', { 'id': tipus.id })}}">{{ tipus.Descripcio}}</a></li>                                
        </ul>
    {% endfor %}
{% endblock %}